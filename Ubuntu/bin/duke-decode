#!/bin/bash

# -------------------------------------------------------------------------------------------------
# Functions
# -------------------------------------------------------------------------------------------------
BASEDIR=$(dirname $(readlink -f ${0}))
BASENAME=$(basename ${0})

# Source util
source ${BASEDIR}/duke-util.sh

function usage {
  echo "Decode <encoded-file> and save as <plain-file>. The command prompts for password."
  echo "Usage: ${BASENAME} <encoded-file> <plain-file>"
}

# -------------------------------------------------------------------------------------------------
# Parse Arg
# -------------------------------------------------------------------------------------------------
if [[ ${#} -eq 1 && ("${1}" == "--help" || "${1}" == "-h") ]]
then
  usage
  exit 0
fi

if [[ ${#} -ne 2 ]]
then
  dieUsage "Invalid argument count"
fi

fileEncode="${1}"
filePlain="${2}"

# -------------------------------------------------------------------------------------------------
# Main
# -------------------------------------------------------------------------------------------------
gpg --decrypt --no-symkey-cache ${fileEncode} > ${filePlain}
