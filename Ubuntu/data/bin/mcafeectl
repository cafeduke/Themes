#!/bin/bash

# -------------------------------------------------------------------------------------------------
# Functions
# -------------------------------------------------------------------------------------------------
BASEDIR=$(dirname $(readlink -f ${0}))
BASENAME=$(basename ${0})

# Source util
source ${BASEDIR}/duke-util.sh

function usage {
  echo "Start/Styp mcafree"
  echo "sudo ${BASENAME} <start|stop>"
}

# -------------------------------------------------------------------------------------------------
# Parse Arg
# -------------------------------------------------------------------------------------------------
if [[ ${#} -eq 1 && ("${1}" == "--help" || "${1}" == "-h") ]]
then
  usage
  exit 0
fi

if [[ ${#} -ne 1 ]]
then
  dieUsage "Invalid argument count"
fi

op="${1}"

# -------------------------------------------------------------------------------------------------
# Main
# -------------------------------------------------------------------------------------------------

if [[ "${op}" == "start" || "${op}" == "stop" ]]
then
  systemctl ${op} mfetpd.service mfeespd.service mcafee.ma.service
fi

