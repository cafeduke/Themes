#!/bin/bash

# -------------------------------------------------------------------------------------------------
# Functions
# -------------------------------------------------------------------------------------------------
BASEDIR=$(dirname $(readlink -f ${0}))
BASENAME=$(basename ${0})

# Source util
source ${BASEDIR}/duke-util.sh

function usage {
  echo "Decode and cat <encoded-file>. The command prompts for password."
  echo "Usage: ${BASENAME} <encoded-file>"
}

# -------------------------------------------------------------------------------------------------
# Parse Arg
# -------------------------------------------------------------------------------------------------
if [[ ${#} -eq 1 && ("${1}" == "--help" || "${1}" == "-h") ]]
then
  usage
  exit 0
fi

if [[ ${#} -ne 1 ]]
then
  dieUsage "Invalid argument count"
fi

fileEncode="${1}"

# -------------------------------------------------------------------------------------------------
# Main
# -------------------------------------------------------------------------------------------------
gpg --decrypt --no-symkey-cache ${fileEncode} | more
